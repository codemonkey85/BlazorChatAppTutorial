@page "/"

<h1>Blazor Chat App Tutorial</h1>

<div>
    <div class="form-div">
        <EditForm Model="appState" OnValidSubmit="OnValidFormSubmitUserName">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div>
                <label for="userNameInput">User Name: </label>
                <InputText id="userNameInput" @bind-Value="appState.UserName" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            @if (formSaved)
            {
                <label>Saved!</label>
            }
        </EditForm>
    </div>
</div>
<div class="form-div">
    <EditForm Model="@newRoom" OnValidSubmit="OnValidFormSubmitRoomNames">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div>
            <label for="roomNameInput">Join Room: </label>
            <InputText id="roomNameInput" @bind-Value="newRoom.RoomName" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        @if (!string.IsNullOrEmpty(roomJoinedMessage))
        {
            <label>@roomJoinedMessage</label>
        }
    </EditForm>
</div>
